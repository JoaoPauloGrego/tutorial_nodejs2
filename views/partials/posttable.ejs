<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>N° do usuário</th>
      <th>Título</th>
      <th>Conteúdo</th>
      <th>Data</th>
    </tr>
  </thead>
  <tbody>
    <% let i = 0; for (i = 0; i < dados.length; i++) { %>
    <tr class="clickable-row" data-id="<%- dados[i].id %>">
      <td><%- dados[i].id %></td>
      <td><%- dados[i].iduser %></td>
      <td><%- dados[i].title %></td>
      <td><%- dados[i].content %></td>
      <td><%- new Date(dados[i].datepost).toLocaleDateString() %></td>
    </tr>
    <% } %>
  </tbody>
  <tfoot> 
    <td colspan="5"><%- `Qtd: ${dados.length}` %></td>
  </tfoot>
</table>

<script>
  document.querySelectorAll('.clickable-row').forEach(row => {
    row.addEventListener('click', () => {
    });
  });
</script>

<style>
  .clickable-row {
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  .clickable-row:hover {
    background-color: #f0f8ff;
  }
  
  td {
    padding: 8px;
    border-bottom: 1px solid #ddd;
  }
</style>
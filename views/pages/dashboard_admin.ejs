<!DOCTYPE html>
<html lang="pt-BR">
<%- include("../partials/head") %>

<body>
  <div class="dashboard-container">
    <!-- Barra superior com botões -->
    <div class="minimal-header">
      <a href="/index2" class="back-button">Voltar</a>
      <a href="/logout" class="logout-button">Sair</a>
    </div>

    <!-- Tabela de posts -->
    <div class="posts-section">
      <div class="section-header">
        <h2>Todos os Posts</h2>
        <div class="post-count">
          <span><%= posts ? posts.length : 0 %></span> posts
        </div>
      </div>
      
      <div class="table-container">
        <%- include("../partials/table", {posts: posts, isAdmin: true}) %>
      </div>
    </div>

    <!-- Mensagens de feedback -->
    <% if (req.query.success === 'post_updated') { %>
      <div class="alert success">
        Post atualizado com sucesso!
      </div>
    <% } %>

    <% if (req.query.error) { %>
      <div class="alert error">
        Erro: <%= req.query.error === 'update_failed' ? 'Falha ao atualizar o post' : req.query.error %>
      </div>
    <% } %>
  </div>
</body>

<style>
  /* Estilos gerais */
  body {
    background-color: #f0f2f5;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
  }

  .dashboard-container {
    max-width: 1200px;
    margin: 20px auto;
    padding: 20px;
    background-color: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* Barra superior minimalista */
  .minimal-header {
    display: flex;
    justify-content: space-between;
    padding: 15px 0;
    border-bottom: 1px solid #eaeaea;
    margin-bottom: 20px;
  }

  .back-button, .logout-button {
    padding: 8px 15px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
  }

  .back-button {
    background-color: #6c757d;
    color: white;
  }

  .back-button:hover {
    background-color: #5a6268;
  }

  .logout-button {
    background-color: #dc3545;
    color: white;
  }

  .logout-button:hover {
    background-color: #c82333;
  }

  /* Estilos da seção de posts */
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .post-count {
    background-color: #e9ecef;
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 0.9rem;
  }

  .post-count span {
    font-weight: bold;
    color: #007bff;
  }

  /* Mensagens de alerta */
  .alert {
    padding: 15px;
    margin: 20px 0;
    border-radius: 5px;
    font-weight: bold;
  }

  .success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  /* Estilos responsivos */
  @media (max-width: 768px) {
    .dashboard-container {
      padding: 15px;
      margin: 10px;
    }
    
    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }
  }
</style>
</html>